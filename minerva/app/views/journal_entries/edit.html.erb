<script src="https://kit.fontawesome.com/d4515c3dae.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">

<div class="container-fluid header">
  <div class="col-md-12">
      <a href="/home">
        <i class="fas fa-bookmark fa-3x"></i>
        <span class="header-title"> Minerva</span>
    </a>
  </div>
</div>

<div class="container-fluid">
    <div class="row panel">
      <%= form_for @journal_entry, as: :journal_entry, url: "/journals/#{@journal_entry.journal_id}/#{@journal_entry.id}?method=PATCH" do |form| %>
        <%= form.label :title %>
        <%= form.text_field :title %>

        <%= form.label :body %>
        <%= form.text_area :body %>

        <%= form.hidden_field :journal_id %>
        <%= form.hidden_field :edited, :value => true %>

        <%= form.submit "Update", class: 'btn' %>
      <% end %>
    </div>
  <div class="row footer">
    <div class="col-md-12">
       <div class="short-intro">
         <p>Create personal journals with Minerva</p><br>
       </div>
     </div>
   </div>
</div>
